{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "pacific-1": {
      "$ref": "#/definitions/chain"
    },
    "atlantic-2": {
      "$ref": "#/definitions/chain"
    },
    "arctic-1": {
      "$ref": "#/definitions/chain"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "chain": {
      "type": "object",
      "properties": {
        "chainId": {
          "type": "string"
        },
        "network_type": {
          "type": "string",
          "enum": ["mainnet", "testnet", "devnet"]
        },
        "rpc": {
          "type": "array",
          "items": { "$ref": "#/definitions/provider" }
        },
        "rest": {
          "type": "array",
          "items": { "$ref": "#/definitions/provider" }
        },
        "grpc": {
          "type": "array",
          "items": { "$ref": "#/definitions/provider" }
        },
        "evm_rpc": {
          "type": "array",
          "items": { "$ref": "#/definitions/provider" }
        },
        "evm_ws": {
          "type": "array",
          "items": { "$ref": "#/definitions/provider" }
        },
        "explorers": {
          "type": "array",
          "items": { "$ref": "#/definitions/explorer" }
        },
        "faucets": {
          "type": "array",
          "items": { "$ref": "#/definitions/faucet" }
        }
      },
      "additionalProperties": false
    },
    "provider": {
      "type": "object",
      "properties": {
        "provider": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      },
      "required": ["provider", "url"],
      "additionalProperties": false
    },
    "explorer": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "tx_page": { "type": "string" }
      },
      "required": ["name", "url"],
      "additionalProperties": false
    },
    "faucet": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["provider", "url"],
      "additionalProperties": false
    }
  }
}
